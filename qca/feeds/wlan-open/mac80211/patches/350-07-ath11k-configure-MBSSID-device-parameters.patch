@@ -389,6 +389,7 @@ struct ath11k_vif {
	struct ath11k_tid_qos_config tid_cfg[ATH11K_TID_MAX];
 	u32 tids_rst;
 	u64 tbtt_offset;
+	u8 nontransmitting_vif_count;
