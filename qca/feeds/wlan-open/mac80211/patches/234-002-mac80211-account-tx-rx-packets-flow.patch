+++ b/net/mac80211/tx.c
@@ -4202,6 +4202,9 @@ void __ieee80211_subif_start_xmit(struct
 	if (IS_ERR(sta))
 		sta = NULL;
 
+	if (sta)
+		atomic_inc(&sta->tx_netif_pkts);
+
 	if (sdata->vif.type == NL80211_IFTYPE_AP_VLAN) {
 		ap_sdata = container_of(sdata->bss,
 					struct ieee80211_sub_if_data, u.ap);
@@ -4497,6 +4500,9 @@ static bool ieee80211_tx_8023(struct iee
 
 	drv_tx(local, &control, skb);
 
+	if (sta)
+		atomic_inc(&sta->tx_drv_pkts);
+
 	return true;
 }
 
@@ -4564,6 +4570,9 @@ static void ieee80211_8023_xmit(struct i
 
 	ieee80211_tx_8023(sdata, skb, sta, false);
 
+	if (sta)
+		atomic_inc(&sta->tx_netif_pkts);
+
 	return;
 
