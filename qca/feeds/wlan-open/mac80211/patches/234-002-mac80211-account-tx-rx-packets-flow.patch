 	DEBUGFS_ADD(ht_capa);
 	DEBUGFS_ADD(vht_capa);
 	DEBUGFS_ADD(he_capa);
+	DEBUGFS_ADD(reset_mac80211_tx_pkts_flow);
+	DEBUGFS_ADD(reset_mac80211_rx_pkts_flow);
+	DEBUGFS_ADD(mac80211_tx_pkts_flow);
